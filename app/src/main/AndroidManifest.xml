<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CreativeMode"
        tools:targetApi="31">

        <!-- Main entry point -->
        <activity
            android:name=".mainEntry"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Creative Mode -->
        <activity
            android:name=".creativeMode"
            android:exported="true" />


        <activity android:name=".normalModeReview"/>
        <activity android:name=".normalMode"/>
        <activity android:name=".creativeHistory"/>
        <activity android:name=".normalHistory"/>
        <activity
            android:name=".signIn"
            android:exported="true" />
        <activity
            android:name=".signUp"
            android:exported="true" />
        <activity
            android:name=".profilePage"
            android:exported="true" />
        <activity
            android:name=".scoreActivity"
            android:exported="false" />
        <activity
            android:name=".reviewMistakes"
            android:exported="false" />
        <activity
            android:name=".gamePlayMode"
            android:exported="true" />
    </application>

</manifest>
