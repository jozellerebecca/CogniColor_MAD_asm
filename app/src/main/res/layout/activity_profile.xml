    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/anton_regular"
                        android:text="\@USERNAME"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/anton_regular"
                        android:text="EMAIL: "
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/anton_regular"
                        android:text="DOB: "
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/anton_regular"
                        android:text="COUNTRY: "
                        android:textSize="16dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/profilepic"
                    android:layout_marginRight="5dp"/>


            </RelativeLayout>

            <Button
                android:id="@+id/edit"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/anton_regular"
                android:layout_width="105dp"
                android:layout_height="45dp"
                android:textSize="13dp"
                android:text="EDIT?"
                android:backgroundTint="#FAA275"/>

            <View
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:fontFamily="@font/anton_regular"
                android:textSize="25dp"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW GAME HISTORY"/>

            <TextView
                android:textColor="#A0A0A0"
                android:fontFamily="@font/anton_regular"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You may view your previous scores for either Creative and Normal Mode below."/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

            <Button
                android:backgroundTint="#FAA275"
                android:id="@+id/btn_cmode_history"
                android:layout_marginTop="25dp"
                android:textSize="17dp"
                android:fontFamily="@font/anton_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CREATIVE MODE"
                android:layout_marginBottom="13dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:backgroundTint="#FAA275"
                android:id="@+id/btn_nmode_history"
                android:layout_marginTop="25dp"
                android:textSize="17dp"
                android:fontFamily="@font/anton_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NORMAL MODE"
                android:layout_marginBottom="13dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_return"
                android:layout_marginTop="160dp"
                android:backgroundTint="#FAA275"
                android:fontFamily="@font/anton_regular"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="RETURN"/>

        </LinearLayout>

    </LinearLayout>
